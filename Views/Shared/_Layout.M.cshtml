@using ketnoicungcau.vn.ViewComponents
@using Microsoft.Extensions.Options
@inject ketnoicungcau.business.Framework.IWorkContext _workContext
@{
    var rnd = new Random().Next();
}
<!DOCTYPE html>
<html lang="vi-VN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <meta content="INDEX,FOLLOW" name="robots" />
    <meta name="copyright" content="Kết nối cung cầu" />
    <meta name="author" content="Kết nối cung cầu" />
    <title>@ViewData["Title"] - ketnoicungcau.vn</title>
    <link rel="stylesheet" href="~/Contents/css/bundle/global.M.min.css" />
    <link href="~/images/favicon.ico" rel="shortcut icon" type="image/x-icon">
    @RenderSection("metaHeader", required: false)
    @RenderSection("Css", required: false)
</head>
<body>
    @await Component.InvokeAsync("MasterPage", new MasterPageViewComponent.ReqMasterPage { viewName = "Header", isHeader = true, isMobile = true })
    @RenderBody()
    @await Component.InvokeAsync("MasterPage", new MasterPageViewComponent.ReqMasterPage { viewName = "Footer", isHeader = false, isMobile = true })
    <script src="~/Contents/js/bundle/global.M.min.js?v=@rnd"></script>
    <script src="https://www.google.com/recaptcha/api.js?hl=vi" async defer></script>
    <script type="text/javascript">
            var isMobile = true;
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>